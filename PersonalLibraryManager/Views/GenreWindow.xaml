<Window x:Class="PersonalLibraryManager.Views.GenreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalLibraryManager.Views"
        mc:Ignorable="d"
        Title="Genres" Height="400" Width="500">
    <Grid Margin="30">
        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Manage Genres" FontSize="20" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,15" FontWeight="SemiBold"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Genres}" SelectedItem="{Binding SelectedGenre}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Genre Name" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="Add" Command="{Binding AddCommand}" Style="{StaticResource ModernButton}" Width="90" Margin="5"/>
                    <Button Content="Save" Command="{Binding SaveCommand}" Style="{StaticResource ModernButton}" Width="90" Margin="5"/>
                    <Button Content="Delete" Command="{Binding DeleteCommand}" Style="{StaticResource DangerButton}" Width="90" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

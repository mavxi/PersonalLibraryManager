<Window x:Class="PersonalLibraryManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonalLibraryManager"
        mc:Ignorable="d"
        Title="Personal Library Manager" Height="300" Width="400">
    <StackPanel Margin="20">
        <Button Content="Manage Books" Click="OpenBooks" Height="30" Margin="0,5"/>
        <Button Content="Manage Authors" Click="OpenAuthors" Height="30" Margin="0,5"/>
        <Button Content="Manage Genres" Click="OpenGenres" Height="30" Margin="0,5"/>
        <Button Content="About" Click="OpenAbout" Height="30" Margin="0,5"/>
    </StackPanel>
</Window>
